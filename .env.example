# =============================================================================
# TDK Data Pipeline – Environment Variables
# Copy this file to .env and adjust values as needed.
# =============================================================================

# Oracle Database Connection
ORACLE_HOST=oracle-db
ORACLE_PORT=1521
ORACLE_SID=XE
ORACLE_USER=pipeline_user
ORACLE_PASSWORD=oracle123

# (Optional) Path to Oracle Instant Client – leave empty to use thin mode
ORACLE_CLIENT_DIR=

# Scheduler
RUN_ON_STARTUP=true

# Service URLs (used by the scheduler to call the other services)
INGESTION_URL=http://data-ingestion:5001/ingest
EXPORT_URL=http://data-export:5002/export
